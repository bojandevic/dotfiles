export PATH="$HOME/Android/Sdk/tools:$PATH"
export PATH="$HOME/Scripts:$PATH"
export PATH="$HOME/bin/android-studio/gradle/gradle-4.4/bin:$PATH"
export PATH=~/.npm-global/bin:$PATH

